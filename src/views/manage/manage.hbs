<div class="holder mt-0">
    <div class="container">
        <ul class="breadcrumbs">
            <li><a href="index.html">Home</a></li>
            <li><span>Manage Site</span></li>
        </ul>
    </div>
</div>
<div class="holder mt-0">
    <div class="container">
        <div class="row">
            <div class="col-md-3 aside aside--left">
                <div class="list-group">
                    <a href="/manage/" class="list-group-item active">Site Info</a>
                    <a href="/manage/orders/" class="list-group-item">View Orders</a>
                    <a href="/manage/products/" class="list-group-item">Manage Products</a>
                    <a href="/manage/add-product/" class="list-group-item">Add Product</a>
                    <a href="/manage/categories/" class="list-group-item">Categories</a>
                </div>
            </div>
            <div class="col-md-9 aside">
                <h2>Site Info</h2>
                <div class="card mt-3" id="updateAddress">
                    <div class="card-body">
                        <h3>Edit Site Info</h3>

                        <label class="text-uppercase">Site name:</label>
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{siteConfig.name}}"/>
                        </div>

                        <label class="text-uppercase">Phone number:</label>
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{siteConfig.phoneNumber}}"/>
                        </div>

                        <label class="text-uppercase">Address:</label>
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{siteConfig.address}}"/>
                        </div>

                        <div class="mt-2">
                            <button type="submit" class="btn ml-1">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>